<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="names" string="Title" width="220" optional="show"/>
                <field name="property_type_id" string="Type" width="70" optional="show" />
                <field name="postcode" width="100" optional="show" />
                <field name="bedrooms" width="70" optional="show" />
                <field name="living_area" string="Living Area (sqm)" width="120" optional="show" />
                <field name="date_availability" string="Available From" width="120" optional="show"/>
                <field name="expected_price" width="120" optional="show" />
                <field name="selling_price" width="120" optional="show" />
                <field name="state" string="Status" width="100" optional="show"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <div class="oe_title">
                <h1>
                <field name="names"/>
                </h1>
                </div>
                <group col="2">
                    <group>
                        <field name="property_type_id" />
                        <field name="postcode" />
                        <field name="date_availability" />
                        <field name="state" />
                    </group>
                    <group>
                        <field name="expected_price" />
                        <field name="selling_price" />
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <field name="description" string="Description"/>
                        <field name="bedrooms" string="Bedrooms"/>
                        <field name="living_area" string="Living Area (sqm)"/>
                        <field name="facades" string="Facades"/>
                        <field name="garage" string="Garage"/>
                        <field name="garden" string="Garden"/>
                        <field name="garden_area" string="Garden Area (sqm)"/>
                        <field name="garden_orientation" string="Garden Orientation"/>
                        </group>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <field name="names"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
                <field name="property_type_id" />
                <separator/>
                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="available" string="Available" domain="[('state', 'in', ('new', 'offer_received'))]"/>
                <filter name="property_type_id" string="Property Type" domain="[('property_type_id', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                    <filter name="group_by_property_type" string="Property Type" context="{'group_by': 'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>